<%= simple_form_for @topic, :html => { :class => "form-horizontal" } do |f| %>
  <div class="row">
    <%= f.input :title,
                label_html: { class: "col-xs-12 col-sm-2" },
                input_html: { class: "col-xs-12 col-sm-10" } %>
    <%= error_span(@topic[:title]) %>
  </div>

  <div class="row">
    <%= f.input :description,
                label_html: { class: "col-xs-12 col-sm-2" },
                input_html: { class: "col-xs-12 col-sm-10" } %>
    <%= error_span(@topic[:description]) %>
  </div>

  <div class="row">
    <%= f.input :comment,
                as: :text,
                label_html: { class: "col-xs-12 col-sm-2" },
                input_html: { class: "col-xs-12 col-sm-10", rows: 15 } %>
    <%= error_span(@topic[:comment]) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save", :class => "btn btn-primary" %>
    <%= link_to "Cancel", topics_path(@topic), :class => "btn btn-default" %>
  </div>
<% end %>
