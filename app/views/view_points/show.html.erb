<%- model_class = ViewPoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @view_point.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:priority) %>:</strong></dt>
  <dd><%= @view_point.priority %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              topic_view_points_path(@topic), :class => 'btn btn-default'  %>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_topic_view_point_path(@view_point.topic, @view_point), :class => 'btn btn-default' %>

<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              topic_view_point_path(@view_point.topic, @view_point),
              :method => 'delete',
              :data => {
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))
              },
              :class => 'btn btn-danger' %>
