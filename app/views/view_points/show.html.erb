<%- model_class = ViewPoint -%>
<div class="page-header">
  <h1><%=t ".title", :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @view_point.title %></dd>
</dl>

<%= link_to "Edit",
            edit_topic_view_point_path(@view_point.topic, @view_point), :class => "btn btn-default" %>

<%= link_to "Destroy",
              topic_view_point_path(@view_point.topic, @view_point),
              :method => "delete",
              :data => { :confirm => "Are you sure?" },
              :class => "btn btn-danger" %>

<%= link_to "Back",
            topic_view_points_path(@topic), :class => "btn btn-default"  %>
