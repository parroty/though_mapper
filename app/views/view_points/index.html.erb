<%- model_class = ViewPoint -%>
<div class="page-header">
  <h1>
    View Points - <%= @topic.title %>
  </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:priority) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @view_points.each do |view_point| %>
      <tr>
        <td><%= link_to view_point.id, topic_view_point_path(view_point.topic, view_point) %></td>
        <td><%= view_point.title %></td>
        <td><%= view_point.priority %></td>
        <td><%= to_display_time(view_point.created_at) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_topic_view_point_path(view_point.topic, view_point),
                      :class => 'btn btn-default btn-xs' %>

          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      topic_view_point_path(view_point.topic, view_point),
                      :method => :delete,
                      :data => {
                        :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))
                      },
                      :class => 'btn btn-xs btn-danger' %>


          <% unless view_point.first? %>
            <%= link_to move_higher_topic_view_point_path(view_point.topic, view_point),
                  :method => :post, :id => :view_point do %>
              <i class="fa fa-arrow-up"></i>
            <% end %>
          <% end %>

          <% unless view_point.last? %>
            <%= link_to move_lower_topic_view_point_path(view_point.topic, view_point),
                  :method => :post, :id => :view_point do %>
              <i class="fa fa-arrow-down"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_topic_view_point_path,
            :class => 'btn btn-primary' %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              topics_path, :class => 'btn btn-default'  %>
