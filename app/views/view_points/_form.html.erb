<%= simple_form_for [@topic, @view_point], :html => { :class => "form-horizontal" } do |f| %>
  <div class="row">
    <%= f.input :title,
                required: false,
                label_html: { class: "col-xs-12 col-sm-1" },
                input_html: { class: "col-xs-12 col-sm-11" } %>
    <%= error_span(@view_point[:title]) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save", :class => "btn btn-primary" %>

    <%= link_to "Cancel", topic_path(@topic), :class => "btn btn-default" %>
  </div>

  <div class="form-actions">
    <% if @view_point.id %>
      <%= link_to "Destroy", topic_view_point_path(@view_point.topic, @view_point),
                    :method => "delete",
                    :data => { :confirm => "Are you sure?" },
                    :class => "btn btn-danger" %>
    <% end %>
  </div>
<% end %>
