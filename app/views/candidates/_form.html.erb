<%= simple_form_for [@topic, @candidate], :html => { :class => "form-horizontal" } do |f| %>
  <div class="row">
    <%= f.input :title,
                label_html: { class: "col-md-2" },
                input_html: { class: "col-md-10" } %>
    <%= error_span(@candidate[:title]) %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Save", :class => "btn btn-primary" %>

    <% if @candidate.id %>
      <%= link_to "Destroy", topic_candidate_path(@candidate.topic, @candidate),
                    :method => "delete",
                    :data => { :confirm => "Are you sure?" },
                    :class => "btn btn-danger" %>
    <% end %>

    <%= link_to "Cancel", topic_path(@topic), :class => "btn btn-default" %>
  </div>
<% end %>
