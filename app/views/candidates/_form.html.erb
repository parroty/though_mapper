<%= simple_form_for [@topic, @candidate], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= error_span(@candidate[:title]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                topic_candidates_path(@topic), :class => 'btn btn-default' %>
<% end %>
